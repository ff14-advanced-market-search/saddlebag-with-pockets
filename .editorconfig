[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[*.md]
indent_size = 2
tab_width = 2

[*.{yaml,yml}]
indent_size = 2

[*.{tsx,ts,jsx,js}]
indent_size = 2

[*.json]
indent_size = 2
tab_width = 2