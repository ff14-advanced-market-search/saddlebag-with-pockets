{
  "name": "saddlebag.exchange",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "proxy": "https://localhost:3000",
  "homepage": "https://saddlebagexchange.com/",
  "sideEffects": false,
  "scripts": {
    "build": "run-s \"build:css\" \"build:remix\"",
    "build:css": "yarn run generate:css --minify",
    "build:remix": "remix build",
    "dev": "yarn run generate:css && remix build && run-p \"dev:*\"",
    "dev:css": "yarn run generate:css --watch",
    "dev:remix": "remix watch",
    "dev:wrangler": "wrangler pages dev ./public",
    "generate:css": "npx tailwindcss -o ./app/tailwind.css",
    "prettier": "prettier --write app",
    "prettier:check": "prettier --check app",
    "test": "vitest",
    "prepare": "husky install",
    "write-items": "yarn run write-ffxiv-items && prettier --write app/utils/items/ffxivItems.ts && yarn run write-wow-items && prettier --write app/utils/items/wowItems.ts && yarn run prettier",
    "write-ffxiv-items": "node ./scripts/write-ffxiv-items.js && prettier --write app/utils/items/ffxivItems.ts",
    "write-wow-items": "node ./scripts/write-wow-items.js && prettier --write app/utils/items/wowItems.ts"
  },
  "packageManager": "yarn@1.22.18",
  "dependencies": {
    "@cloudflare/wrangler": "^1.21.0",
    "@datadog/browser-rum": "^6.10.1",
    "@reduxjs/toolkit": "^2.8.2",
    "@remix-run/cloudflare": "^2.16.8",
    "@remix-run/cloudflare-pages": "^2.16.8",
    "@remix-run/node": "^2.16.8",
    "@remix-run/react": "^2.16.8",
    "@remix-run/serve": "^2.16.8",
    "@remix-validated-form/with-zod": "^2.0.7",
    "@tanstack/match-sorter-utils": "^8.19.4",
    "@tanstack/react-table": "^8.21.3",
    "axios": "^1.9.0",
    "caniuse-lite": "^1.0.30001721",
    "date-fns": "^4.1.0",
    "highcharts": "^12.2.0",
    "highcharts-react-official": "^3.2.2",
    "react": "^19.1.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dnd-scrolling": "^1.3.10",
    "react-dnd-touch-backend": "^16.0.1",
    "react-dom": "^19.1.0",
    "react-redux": "^9.2.0",
    "remix-validated-form": "^5.1.5",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@remix-run/dev": "^2.16.8",
    "@remix-run/eslint-config": "^2.16.8",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.30",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "eslint": "^9.28.0",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "3.5.3",
    "prettier-config-standard": "^7.0.0",
    "pretty-quick": "^4.2.2",
    "tailwindcss": "^4.1.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.2",
    "wrangler": "4.19.1"
  },
  "prettier": "prettier-config-standard",
  "lint-staged": {
    "*.{ts,tsx,js}": "eslint --cache --fix",
    "*.{ts,tsx,js,css,md}": "prettier --write"
  }
}
