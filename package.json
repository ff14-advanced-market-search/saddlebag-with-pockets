{
  "name": "saddlebag.exchange",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "proxy": "https://localhost:3000",
  "homepage": "https://saddlebagexchange.com/",
  "sideEffects": false,
  "scripts": {
    "build": "BROWSERSLIST_IGNORE_OLD_DATA=1 run-s \"build:css\" \"build:remix\"",
    "build:css": "BROWSERSLIST_IGNORE_OLD_DATA=1 yarn run generate:css --minify",
    "build:remix": "remix build",
    "dev": "BROWSERSLIST_IGNORE_OLD_DATA=1 yarn run generate:css && remix build && run-p \"dev:*\"",
    "dev:css": "BROWSERSLIST_IGNORE_OLD_DATA=1 yarn run generate:css --watch",
    "dev:remix": "remix watch",
    "dev:wrangler": "wrangler pages dev ./public --compatibility-flag=nodejs_compat --compatibility-date=2025-06-04",
    "generate:css": "BROWSERSLIST_IGNORE_OLD_DATA=1 npx tailwindcss -o ./app/tailwind.css",
    "prettier": "prettier --write app",
    "prettier:check": "prettier --check app",
    "test": "vitest",
    "prepare": "husky install",
    "write-items": "yarn run write-ffxiv-items && prettier --write app/utils/items/ffxivItems.ts && yarn run write-wow-items && prettier --write app/utils/items/wowItems.ts && yarn run write-gw2-items && prettier --write app/utils/items/gw2Items.ts && yarn run prettier",
    "write-ffxiv-items": "node ./scripts/write-ffxiv-items.js && prettier --write app/utils/items/ffxivItems.ts",
    "write-wow-items": "node ./scripts/write-wow-items.js && prettier --write app/utils/items/wowItems.ts",
    "write-gw2-items": "node ./scripts/write-gw2-items.js && prettier --write app/utils/items/gw2Items.ts"
  },
  "packageManager": "yarn@1.22.18",
  "dependencies": {
    "@datadog/browser-rum": "^6.25.4",
    "@discordjs/rest": "^2.5.1",
    "@reduxjs/toolkit": "^2.11.2",
    "@remix-run/cloudflare": "^2.17.4",
    "@remix-run/cloudflare-pages": "^2.17.4",
    "@remix-run/node": "^2.17.4",
    "@remix-run/react": "^2.17.4",
    "@remix-run/serve": "^2.17.4",
    "@remix-validated-form/with-zod": "^2.0.1",
    "@tanstack/match-sorter-utils": "^8.19.4",
    "@tanstack/react-table": "^8.21.3",
    "axios": "^1.9.0",
    "dayjs": "^1.11.12",
    "date-fns": "^2.29.3",
    "discord-api-types": "^0.38.15",
    "highcharts": "^11.4.4",
    "highcharts-react-official": "^3.2.3",
    "react": "18.3.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dnd-scrolling": "^1.3.10",
    "react-dnd-touch-backend": "^16.0.1",
    "react-dom": "18.3.1",
    "react-redux": "^9.2.0",
    "react-tailwindcss-datepicker": "1.7.3",
    "remix-validated-form": "^5.0.0",
    "zod": "^3.25.62"
  },
  "devDependencies": {
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@remix-run/dev": "^2.17.4",
    "@remix-run/eslint-config": "^2.17.4",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^25.0.9",
    "@types/react": "18.3.27",
    "@types/react-dom": "18.3.7",
    "@cloudflare/workers-types": "^4.0.0",
    "eslint": "^9.39.2",
    "husky": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.8",
    "prettier-config-standard": "^5.0.0",
    "pretty-quick": "^3.1.3",
    "tailwindcss": "^3.4.19",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^4.0.17",
    "wrangler": "^4.59.2"
  },
  "prettier": "prettier-config-standard",
  "lint-staged": {
    "*.{ts,tsx,js}": "eslint --cache --fix",
    "*.{ts,tsx,js,css,md}": "prettier --write"
  },
  "resolutions": {}
}
