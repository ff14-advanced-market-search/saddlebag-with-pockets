{
  "name": "saddlebag.exchange",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "proxy": "https://localhost:3000",
  "homepage": "https://saddlebagexchange.com/",
  "sideEffects": false,
  "scripts": {
    "build": "run-s \"build:css\" \"build:remix\"",
    "build:css": "yarn run generate:css --minify",
    "build:remix": "remix build",
    "dev": "remix build && run-p \"dev:*\"",
    "dev:css": "yarn run generate:css --watch",
    "dev:remix": "remix watch",
    "dev:wrangler": "wrangler pages dev ./public",
    "generate:css": "npx tailwindcss -o ./app/tailwind.css",
    "prettier": "prettier --write app",
    "prettier:check": "prettier --check app",
    "test": "vitest",
    "prepare": "husky install",
    "write-items": "yarn run write-ffxiv-items && prettier --write app/utils/items/ffxivItems.ts && yarn run write-wow-items && prettier --write app/utils/items/wowItems.ts",
    "write-ffxiv-items": "node ./scripts/write-ffxiv-items.js && prettier --write app/utils/items/ffxivItems.ts",
    "write-wow-items": "node ./scripts/write-wow-items.js && prettier --write app/utils/items/wowItems.ts"
  },
  "packageManager": "yarn@1.22.18",
  "dependencies": {
    "@cloudflare/wrangler": "^1.21.0",
    "@reduxjs/toolkit": "^1.8.6",
    "@remix-run/cloudflare": "^1.7.0",
    "@remix-run/cloudflare-pages": "^1.7.0",
    "@remix-run/node": "^1.19.3",
    "@remix-run/react": "^1.7.0",
    "@remix-run/serve": "^1.7.0",
    "@remix-validated-form/with-zod": "^2.0.1",
    "@tanstack/match-sorter-utils": "^8.1.1",
    "@tanstack/react-table": "^8.5.11",
    "axios": "^0.27.2",
    "date-fns": "^2.29.3",
    "highcharts": "^10.2.1",
    "highcharts-react-official": "^3.1.0",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dnd-scrolling": "^1.2.4",
    "react-dnd-touch-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.4",
    "remix-validated-form": "^4.5.5",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@headlessui/react": "^1.7.2",
    "@heroicons/react": "^1.0.6",
    "@remix-run/dev": "^1.7.0",
    "@remix-run/eslint-config": "^1.7.0",
    "@tailwindcss/forms": "^0.5.2",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/react": "^13.4.0",
    "@types/node": "^18.7.1",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^17.0.17",
    "eslint": "^8.20.0",
    "husky": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "prettier-config-standard": "^5.0.0",
    "pretty-quick": "^3.1.3",
    "tailwindcss": "^3.1.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.33.0",
    "wrangler": "^3.28.1"
  },
  "prettier": "prettier-config-standard"
}
