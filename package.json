{
  "name": "saddlebag.exchange",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "proxy": "https://localhost:3000",
  "homepage": "https://saddlebagexchange.com/",
  "sideEffects": false,
  "scripts": {
    "build": "run-s \"build:css\" \"build:remix\"",
    "build:css": "yarn run generate:css --minify",
    "build:remix": "remix build",
    "dev": "yarn run generate:css && remix build && run-p \"dev:*\"",
    "dev:css": "yarn run generate:css --watch",
    "dev:remix": "remix watch",
    "dev:wrangler": "wrangler pages dev ./public",
    "generate:css": "npx tailwindcss -o ./app/tailwind.css",
    "prettier": "prettier --write app",
    "prettier:check": "prettier --check app",
    "test": "vitest",
    "prepare": "husky install",
    "write-items": "yarn run write-ffxiv-items && prettier --write app/utils/items/ffxivItems.ts && yarn run write-wow-items && prettier --write app/utils/items/wowItems.ts && yarn run write-gw2-items && prettier --write app/utils/items/gw2Items.ts && yarn run prettier",
    "write-ffxiv-items": "node ./scripts/write-ffxiv-items.js && prettier --write app/utils/items/ffxivItems.ts",
    "write-wow-items": "node ./scripts/write-wow-items.js && prettier --write app/utils/items/wowItems.ts",
    "write-gw2-items": "node ./scripts/write-gw2-items.js && prettier --write app/utils/items/gw2Items.ts"
  },
  "packageManager": "yarn@1.22.18",
  "dependencies": {
    "@datadog/browser-rum": "^6.10.1",
    "@discordjs/rest": "^2.5.1",
    "@reduxjs/toolkit": "^1.8.6",
    "@remix-run/cloudflare": "^2.0.0",
    "@remix-run/cloudflare-pages": "^2.0.0",
    "@remix-run/node": "^2.0.0",
    "@remix-run/react": "^2.0.0",
    "@remix-run/serve": "^2.0.0",
    "@tanstack/match-sorter-utils": "^8.19.4",
    "@tanstack/react-table": "^8.21.3",
    "axios": "^1.9.0",
    "caniuse-lite": "^1.0.30001722",
    "date-fns": "^2.29.3",
    "dayjs": "^1.11.12",
    "discord-api-types": "^0.38.15",
    "highcharts": "^10.2.1",
    "highcharts-react-official": "^3.2.2",
    "react": "^18.3.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dnd-scrolling": "^1.3.10",
    "react-dnd-touch-backend": "^16.0.1",
    "react-dom": "^18.3.1",
    "react-redux": "^8.0.4",
    "react-tailwindcss-datepicker": "1.7.3",
    "remix-validated-form": "^4.5.5",
    "update-browserslist-db": "^1.1.3",
    "zod": "^3.25.62"
  },
  "devDependencies": {
    "@headlessui/react": "^1.7.2",
    "@heroicons/react": "^1.0.6",
    "@remix-run/dev": "^2.0.0",
    "@remix-run/eslint-config": "^2.0.0",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/react": "^13.4.0",
    "@types/node": "^18.7.1",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^17.0.17",
    "eslint": "^8.20.0",
    "husky": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.8",
    "prettier-config-standard": "^5.0.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.7.4",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.33.0",
    "wrangler": "^4.19.2"
  },
  "prettier": "prettier-config-standard",
  "lint-staged": {
    "*.{ts,tsx,js}": "eslint --cache --fix",
    "*.{ts,tsx,js,css,md}": "prettier --write"
  }
}
