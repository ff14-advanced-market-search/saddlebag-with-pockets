{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s \"build:css\" \"build:remix\"",
    "build:css": "yarn run generate:css --minify",
    "build:remix": "remix build",
    "dev": "remix build && run-p \"dev:*\"",
    "dev:css": "yarn run generate:css --watch",
    "dev:remix": "remix watch",
    "dev:wrangler": "wrangler pages dev ./public",
    "generate:css": "npx tailwindcss -o ./app/tailwind.css",
    "test": "ts-jest",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "prepare": "husky install && git add .husky/pre-commit"
  },
  "packageManager": "yarn@1.22.18",
  "dependencies": {
    "@remix-run/cloudflare": "^1.7.0",
    "@remix-run/cloudflare-pages": "^1.7.0",
    "@remix-run/node": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "@remix-run/serve": "^1.7.0",
    "@remix-validated-form/with-zod": "^2.0.1",
    "@tanstack/match-sorter-utils": "^8.1.1",
    "@tanstack/react-table": "^8.5.11",
    "axios": "^0.27.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix-validated-form": "^4.5.5",
    "zod": "^3.18.0"
  },
  "devDependencies": {
    "@headlessui/react": "^1.6.6",
    "@heroicons/react": "^1.0.6",
    "@remix-run/dev": "^1.7.0",
    "@remix-run/eslint-config": "^1.7.0",
    "@tailwindcss/forms": "^0.5.2",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.7.1",
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17",
    "eslint": "^8.20.0",
    "husky": "^8.0.0",
    "jest": "^28.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "tailwindcss": "^3.1.8",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "wrangler": "^2.0.28"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick"
    }
  }
}
