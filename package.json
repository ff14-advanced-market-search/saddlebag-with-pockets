{
  "name": "saddlebag.exchange",
  "version": "1.1.0",
  "private": true,
  "license": "Apache-2.0",
  "proxy": "https://localhost:3000",
  "homepage": "https://saddlebagexchange.com/",
  "sideEffects": false,
  "scripts": {
    "build": "concurrently \" yarn run build:css\" \"remix build\"",
    "build:css": "tailwindcss -m -i ./app/base.css -o ./app/tailwind.css",
    "dev:remix": "remix watch",
    "dev": "remix build && run-p \"dev:*\"",
    "dev:wrangler": "wrangler dev ./build/index.js --local",
    "dev:css": "yarn run generate:css --watch",
    "generate:css": "tailwindcss -p -i ./app/base.css -o ./app/tailwind.css",
    "postinstall": "remix setup cloudflare && remix-esbuild-override",
    "prettier": "prettier --write app",
    "prettier:check": "prettier --check app",
    "test": "ts-jest",
    "prepare": "husky install"
  },
  "packageManager": "yarn@1.22.18",
  "dependencies": {
    "@cloudflare/wrangler": "^1.20.0",
    "@remix-run/cloudflare": "^1.7.3",
    "@remix-run/cloudflare-pages": "^1.7.0",
    "@remix-run/cloudflare-workers": "^1.7.3",
    "@remix-run/node": "^1.7.3",
    "@remix-run/react": "^1.7.3",
    "@remix-run/serve": "^1.7.3",
    "@remix-validated-form/with-zod": "^2.0.1",
    "@tanstack/match-sorter-utils": "^8.1.1",
    "@tanstack/react-table": "^8.5.11",
    "axios": "^0.27.2",
    "concurrently": "^7.4.0",
    "highcharts": "^10.2.1",
    "highcharts-react-official": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix": "^1.7.3",
    "remix-esbuild-override": "^3.0.4",
    "remix-validated-form": "^4.5.5",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@headlessui/react": "^1.7.2",
    "@heroicons/react": "^1.0.6",
    "@remix-run/dev": "^1.7.3",
    "@remix-run/eslint-config": "^1.7.3",
    "@tailwindcss/forms": "^0.5.2",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.7.1",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^17.0.17",
    "eslint": "^8.20.0",
    "husky": "^8.0.0",
    "jest": "^28.1.3",
    "npm-run-all": "^4.1.5",
    "prettier-config-standard": "^5.0.0",
    "pretty-quick": "^3.1.3",
    "tailwindcss": "^3.1.8",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "wrangler": "^2.1.11"
  },
  "prettier": "prettier-config-standard"
}
